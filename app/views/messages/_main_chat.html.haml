.main-header
  .main-header__left
    .group__name
      group_name

    .group__member
      %p Member：
      %p.group__member__name user_name

  .main-header__right
    .group__edit
      = link_to "Edit", "/groups/1/edit", class: "group__edit__btn"

.main-content
  .message
    .message__info
      .message__info__writer
        投稿者
      .message__info__post-day
        2019/11/09/00:00:00

